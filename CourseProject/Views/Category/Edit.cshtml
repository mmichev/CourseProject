@model CourseProject.Models.CategoryViewModel
@using CourseProject.Helpers
@using CourseProject.Models

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Categories</h2>

<div class="table-actions">
    @if (LoginUserSession.Current.IsAdministrator)
    {
        @Html.ActionLink("Add New Category", "EditCategory", "Category", null, new { @class = "btn btn-primary btn-sm" })
    }


</div>

<table class="table table-striped">

    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>

    </thead>

    <tbody>

        @foreach (CategoriesViewModel category in Model.categoryList)
        {
            <tr>
                <td>@category.ID</td>
                <td>@category.Name</td>
                @if (LoginUserSession.Current.IsAdministrator)
                {
                    <td>@Html.ActionLink("Edit", "EditCategory", "Category", new { id = category.ID }, new { @class = "btn btn-primary btn-sm" })</td>
                    <td>@Html.ActionLink("Delete", "Delete", "Category", new { id = category.ID }, new { onclick = "return confirm('Are you sure you want to delete this category?');", @class = "btn btn-danger btn-sm" })</td>
                }

            </tr>
        }

    </tbody>

</table>

